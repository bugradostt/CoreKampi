@using EntityLayer.Concrete
@model List<About>


    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Hakkımızda</h3>
            <div class="row inner-sec">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">

                    @foreach (var i in Model)
                    {
                         <div class="blog-grid-top">

                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="~/Templates/Vitrin/images/b5.jpg" class="img-fluid" alt="">
                            </a>
                        </div>
                        <h3>
                            Amet consectetur adipisicing
                        </h3>
                        <p>
                            @i.AboutDetails1
                        </p>
                        <a href="single.html" class="btn btn-primary read-m">Read More</a>
                    </div>
                        
                    }
                   
                    
                </div>
                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        

                       
                        @await Component.InvokeAsync("SubscribeMail", new { id = 1 })
                        

                       @await Html.PartialAsync("SocialMediaAbout")

                       <div class="tech-btm">
                            @await Component.InvokeAsync("WriterLastBlog")
                        </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->
   