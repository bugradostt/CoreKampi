@using EntityLayer.Concrete
@model List<Blog>

@{
    Layout = "~/Views/Shared/Writer/_WriterLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Yazarın Blogları</h1>

<hr />

<a href="/Blog/AddBlog/" class="btn btn-success">Yeni Blog</a>

<br />
<br />

<table class="table table-striped">

    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durumu</th>
        <th></th>
        <th></th>
    </tr>

    @{
        int a = 1;
    }
    @foreach (var i in Model)
    {

        <tr>
            <th>@a</th>
            <td>@i.BlogTitle</td>
            <td>@i.BlogCreateDate.ToShortDateString()</td>
            <td>@i.Category.CategoryName</td>
            <td>

                @if (i.BlogStatus == true)
                {
                    <span class="text-success">Aktif</span>

                }
                else
                {
                    <span class="text-danger">Pasif</span>
                }
            </td>


            <td>
                <!--Sil modal Butonu-->
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Sil_@i.BlogId">
                    Sil
                </button>

                <!--Modal-->
                <div class="modal fade" id="Sil_@i.BlogId" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Blog Sil</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Bloğu silmek istiyor musunuz?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary " data-dismiss="modal">Vazgeç</button>
                                <a href="/Blog/DeleteBlog/@i.BlogId" class="btn btn-danger">Sil</a>
                            </div>
                        </div>
                    </div>
                </div>
            </td>


            <td>
                <a href="/Blog/UpdateBlog/@i.BlogId" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>

        a++;

    }

</table>





