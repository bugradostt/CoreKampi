@using EntityLayer.Concrete
@model List<Blog> 

@{
    Layout = "~/Views/Shared/User/_UserLayout.cshtml";
}

<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var i in Model)
                    {

                        <div class="col-lg-4 card" style="margin-bottom:30px">
                            <a href="single.html">
                                <img src="@i.BlogImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @i.BlogCreateDate.ToShortDateString()
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 21
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @i.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogDetail/@i.BlogId">@i.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3" style="min-height:120px">

                                    @if (i.BlogContent.Length > 100)
                                    {
                                        @i.BlogContent.Substring(0, 100)<span>...</span>
                                    }
                                    else
                                    {
                                        @i.BlogContent
                                    }
                                </p>
                                <a href="/Blog/BlogDetail/@i.BlogId" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>

                       
                    }

                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>
<!--//main-->