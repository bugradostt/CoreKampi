@model EntityLayer.Concrete.Writer

@{
    Layout = "~/Views/Shared/Writer/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profilimi Güncelle</h4>
            <br />
            <form action="/Writer/WriterEditProfile/" method="post" class="forms-sample">

                <input type="hidden" class="form-control" id="exampleInputName1" asp-for="WriterId" name="WriterId" >

                <div class="form-group">
                    <label for="exampleInputName1">Yazar Ad Soyad</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName" name="WriterName" placeholder="Adı soyadı...">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterMail" name="WriterMail" placeholder="Mail adresi...">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" name="WriterPassword" placeholder="Şifre...">
                </div>

                <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim seç">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Seç</button>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" name="WriterAbout" asp-for="WriterAbout"></textarea>
                </div>
                <a href="/Writer/GetWriterProfile/" class="btn btn-danger">İptal</a>
                <button type="submit" class="btn btn-warning mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>
