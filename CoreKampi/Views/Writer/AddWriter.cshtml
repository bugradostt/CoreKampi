@model CoreKampi.Models.AddProfileImage

@{
    Layout = "~/Views/Shared/Writer/_WriterLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Ekle</h4>
            <br />
            <form action="/Writer/AddWriter/" method="post" class="forms-sample" enctype="multipart/form-data">


                <div class="form-group">
                    <label for="exampleInputName1">Yazar Ad Soyad</label>
                    <input type="text" class="form-control" id="exampleInputName1" name="WriterName" placeholder="Adı soyadı...">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="email" class="form-control" id="exampleInputEmail3"  name="WriterMail" placeholder="Mail adresi...">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword4"  name="WriterPassword" placeholder="Şifre...">
                </div>

                <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" name="WriterImage" class="form-control"/>
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" name="WriterAbout" ></textarea>
                </div>
                <a href="/Writer/GetWriterProfile/" class="btn btn-danger">İptal</a>
                <button type="submit" class="btn btn-warning mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

