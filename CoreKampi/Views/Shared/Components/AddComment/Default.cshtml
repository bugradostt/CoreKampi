<div class="comment-top">
    <h4>Bir Yorum Yapın</h4>
    <div class="comment-bottom">
        <form action="/Comment/AddComment/" method="post">
            <input class="form-control" hidden type="text" name="ViewBagId" value="@ViewBag.id"  >

            <input class="form-control" style="color:black;" type="text" name="CommentUserName" placeholder="Adınız..." required>
            <input class="form-control" style="color:black;" type="email" name="CommentMail" placeholder="Mail adresiniz..." required>

            <input class="form-control" style="color:black;" type="text" name="CommentTitle" placeholder="Konu..." required>

            <textarea class="form-control" name="CommentContent" placeholder="Messajınız..." required></textarea>
            <button type="submit" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>