@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
    <h3>Son Postlar</h3>
    @foreach (var i in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogDetail/@i.BlogId">
                    <img src="@i.BlogImage" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="/Blog/BlogDetail/@i.BlogId">
                        @if (i.BlogContent.Length > 50)
                        {
                            @i.BlogContent.Substring(0, 50)<span>...</span>
                        }
                        else
                        {
                            @i.BlogContent
                        }
                    </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @i.BlogCreateDate.ToShortDateString()
                    </span>
                </div>
            </div>

        </div>

    }


</div>
