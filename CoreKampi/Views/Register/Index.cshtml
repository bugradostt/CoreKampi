@model EntityLayer.Concrete.Writer

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>

<style>
    .sart:hover{
        cursor:pointer;
    }
</style>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="/Register/Index/" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>

                            <input type="text" class="form-control" 
                                   name="WriterName"
                                   value="@Html.ValueFor(x=>x.WriterName)"
                                   placeholder="Adınızı soyadnızı yazınız...">
                            <span style="color:darkred">
                                @Html.ValidationMessageFor(x=>x.WriterName)
                            </span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail</label>
                            <input type="email" class="form-control"
                                    value="@Html.ValueFor(x=>x.WriterMail)"
                                   name="WriterMail" placeholder="Mailinizi yazınız...">
                            <span style="color:darkred">
                                @Html.ValidationMessageFor(x => x.WriterMail)
                            </span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            <input type="password" class="form-control"
                                   value="@Html.ValueFor(x=>x.WriterPassword)"
                                   name="WriterPassword" placeholder="Şifrenizi yazınız...">

                            <span style="color:darkred">
                                @Html.ValidationMessageFor(x => x.WriterPassword)
                            </span>
                        </div>

                       @*  <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre Tekrar</label>
                            <input type="password" class="form-control"
                                   value="@Html.ValueFor(x=>x.ConfirmPassword)"
                                   name="WriterPassword" 
                                   
                                   placeholder="Tekrar şifreyi yazınız...">

                            <span style="color:darkred">
                                @Html.ValidationMessageFor(x => x.ConfirmPassword)
                            </span>
                        </div> *@
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Fotoğraf Url</label>
                            <input type="text" class="form-control"
                                   value="@Html.ValueFor(x=>x.WriterImage)"
                                   name="WriterImage" placeholder="Fotoğraf url'i yazınız...">
                            <span style="color:darkred">
                                @Html.ValidationMessageFor(x => x.WriterImage)
                            </span>
                        </div>

                        @await Component.InvokeAsync("ListCities")

                    </div>
                    <p>
                        
                        <input type="checkbox"  />
                        <a id="sart">
                            <b class="sart">
                                Tüm şartları okudum, kabul ediyorum.
                            </b>
                        </a>

                    </p>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                </form>

            </div>
        </div>
    </div>
</section>
<!--//main-->

<script>
    $("#sart").click(() => {
        swal("Şartlar !", "Sitemize vermiş olduğunuz mail adresi üzerinden bilgi ve haber epostaları spam ölçüsüne varmadan gönderilmeye devam edecektir.");
    });
</script>